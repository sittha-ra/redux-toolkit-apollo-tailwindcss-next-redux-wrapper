{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@*": [
        "*"
      ],
      "@hook/*": [
        "hook/*"
      ],
      "@redux/*": [
        "redux/*",
      ],
      "@libs/*": [
        "libs/*"
      ],
      "@models": [
        "models"
      ],
      "@apollo/*": [
        "apollo/*"
      ],
      "@components/*": [
        "components/*"
      ]
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}